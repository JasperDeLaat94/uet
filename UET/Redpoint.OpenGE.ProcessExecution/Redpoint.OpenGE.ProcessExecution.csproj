<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="BuildShim" BeforeTargets="ResolveReferences">
    <ItemGroup>
      <OpenGEShim Include="$(ProjectDir)..\Redpoint.OpenGE.Shim\Redpoint.OpenGE.Shim.csproj">
        <AdditionalProperties>RuntimeIdentifier=win-x64</AdditionalProperties>
      </OpenGEShim>
    </ItemGroup>
    <MSBuild Projects="@(OpenGEShim)" Targets="Publish" BuildInParallel="true" />
    <ItemGroup>
      <EmbeddedResource Include="..\Redpoint.OpenGE.Shim\bin\$(Configuration)\$(TargetFramework)\win-x64\publish\Redpoint.OpenGE.Shim.exe">
        <Link>Embedded\win-x64\xgConsole.exe</Link>
      </EmbeddedResource>
    </ItemGroup>
  </Target>

  <ItemGroup>
    <ProjectReference Include="..\Redpoint.ProcessExecution\Redpoint.ProcessExecution.csproj" />
  </ItemGroup>

</Project>
